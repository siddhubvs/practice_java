#include<stdio.h>
int main()
{
    int x,n;
    double e;
    scanf("%d%d",&x,&n);
    if(n<50)
    e=x*n;
    else if(n>=50&&n<=100)
    e=(x*n)-(x*n*10)/100;
    else if(n>=101&&n<=200)
    e=(x*n)-(x*n*20)/100;
    else if(n>201&&n<=400)
    e=(x*n)-(x*n*30)/100;
    else if(n>=401&&n<=500)
    e=(x*n)-(x*n*40)/100;
    else 
    e=(x*n)-(x*n*50)/100;
    printf("%.2lf",e);
    return 0;
}
